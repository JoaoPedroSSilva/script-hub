<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ScriptHub.ViewModels"
             x:Class="ScriptHub.Views.AutomationsScriptsPage"
             Title="Scripts de Automação">

    <ContentPage.BindingContext>
        <vm:AutomationsScriptsViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Padding="10">
        <Button Text="Página Principal" HorizontalOptions="Start" Command="{Binding GoToMainPageCommand}" />
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>