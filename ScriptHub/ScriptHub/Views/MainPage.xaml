<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ScriptHub.ViewModels"
             x:Class="ScriptHub.MainPage">

    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Script Hub"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Central de scripts de automação"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Central de scripts" />

            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Padding="10">
                <Button Text="Automatização" Command="{Binding GoToAutomationsScriptsPageCommand}" />
                <Button Text="Conferências" Command="{Binding GoToVerificationsScriptsPageCommand}" />
                <Button Text="Conversores" Command="{Binding GoToConvertersScriptsPageCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
